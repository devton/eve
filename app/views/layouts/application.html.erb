<!DOCTYPE html>
<html>
    <head>
        <title>Eve</title>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <%= stylesheet_link_tag    'application', media: 'all' %>
        <%= javascript_include_tag 'application' %>
        <%= csrf_meta_tags %>
    </head>
    <body>

        <%- if !devise_controller? %>
            <div id="sidedrawer" class="mui--no-user-select mui--z1">
                <%= render 'shared/main_sidebar' %>
            </div>
            <header id="header">
                <div class="mui-appbar mui--appbar-line-height">
                    <div class="mui-container-fluid">
                        <a class="sidedrawer-toggle mui--visible-xs-inline-block js-show-sidedrawer">☰</a>
                        <a class="sidedrawer-toggle mui--hidden-xs js-hide-sidedrawer">☰</a>
                        <span class="mui--text-title mui--visible-xs-inline-block">Brand.io</span>
                    </div>
                </div>
            </header>
            <div id="content-wrapper">
                <div class="mui--appbar-height"></div>
                <%= yield %>
            </div>
        <%- else %>
            <%= yield %>
        <%- end %>

    </body>
</html>
